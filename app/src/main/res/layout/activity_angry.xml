<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".angry"
    android:orientation="vertical">

    <TextView
        android:id="@+id/upperyellowbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-80dp"
        android:background="@drawable/circle"
        android:elevation="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:clickable="true"
        android:padding="1dp">

        <!--        <ImageView-->
        <!--            android:id="@+id/rectangle"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="146dp"-->
        <!--            app:srcCompat="@drawable/rectangle" />-->

        <ImageView
            android:id="@+id/imgAnxious"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/emoji_angry" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="120dp"
            android:fontFamily="casual"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:text="How To Handle Angry?"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="normal" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rectangle2"
        android:padding="1dp"
        >

        <ImageView
            android:id="@+id/btn_draw"
            android:padding="3dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ang_stop" />

        <TextView
            android:id="@+id/txtDraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="30dp"
            android:fontFamily="casual"
            android:text="Stop!"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/txtDraw2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="casual"
            android:text="Walk away or jump on the spot"
            android:textColor="#000000"
            android:textSize="15sp"
            />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rectangle2"
        android:clickable="true"
        android:padding="1dp"        >

        <ImageView
            android:id="@+id/btn_healthy"
            android:padding="3dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ang_breathing" />

        <TextView
            android:id="@+id/txtHealthy"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="30dp"
            android:fontFamily="casual"
            android:text="Realease It"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtHealthy2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="casual"
            android:text="Punch pillow or count until 10 and take deep breath"
            android:textColor="#000000"
            android:textSize="15sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rectangle2"
        android:padding="1dp"        >

        <ImageView
            android:id="@+id/btn_meTime"
            android:padding="3dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ang_peace" />

        <TextView
            android:id="@+id/txtmeTime"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="30dp"
            android:fontFamily="casual"
            android:text="Find Peace"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtmeTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="casual"
            android:text="Listen to alquran, music or podcast"
            android:textColor="#000000"
            android:textSize="15sp"
            />

    </RelativeLayout>



</LinearLayout>