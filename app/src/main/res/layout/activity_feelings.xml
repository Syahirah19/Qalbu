<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feelings"
    android:orientation="vertical">

    <TextView
        android:id="@+id/upperyellowbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-80dp"
        android:background="@drawable/circle"
        android:elevation="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:clickable="true"
        android:padding="1dp"
        android:background="#FFFFFF">

<!--        <ImageView-->
<!--            android:id="@+id/rectangle"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="146dp"-->
<!--            app:srcCompat="@drawable/rectangle" />-->

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="0dp"
            app:srcCompat="@drawable/logo_qalbu"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="100dp"
            android:fontFamily="casual"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:text="How do you feel today?"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="normal" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rectangle"
        android:padding="1dp"
        >


        <ImageView
            android:id="@+id/btnThinking"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/emoji_thinking"
            android:clickable="true"
            android:focusable="true"
            />

        <TextView
            android:id="@+id/txtSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="105dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="casual"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:text="Overthinking"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="normal" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rectangle"
        android:clickable="true"
        android:padding="1dp"        >

        <ImageView
            android:id="@+id/btnAnxious"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/emoji_anxious" />

        <TextView
            android:id="@+id/txtRoutine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="105dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="casual"
            android:text="Anxious"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="normal" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rectangle"
        android:clickable="true"
        android:padding="1dp"        >

        <ImageView
            android:id="@+id/btnAngry"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/emoji_angry" />

        <TextView
            android:id="@+id/txtJournal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="105dp"
            android:fontFamily="casual"
            android:text="Angry"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="normal" />

    </RelativeLayout>



</LinearLayout>